# start terminal
super + Return
	kitty

# show launcher or window switcher
super + {_,shift} + l
	rofi -show {drun,window} -m $(bspc query -M -m --names)

# log out
super + Escape
	bspc quit

# close window
super + {_,shift} + q
	{bspc node -c,xkill}

# switch window state
super + s
	bspc node -t {\~tiled,\~floating,\~fullscreen}

# move window between desktops
super + {Left,Right}
	bspc node -d {prev,next}.local --follow

# move window between monitors
super + shift + {Left,Right}
	bspc node -m {west,east} --follow

# switch workspace using numbers
super + {0-9}
	bspc desktop -f {0-9}

# switch workspace using mouse wheel
super + button{4,5}
	bspc desktop -f {prev,next}.local

# close all notifications
super + c
	dunstctl close-all

# moves the focused window to the emptiest desktop
super + e
	find-emptiest-desktop

# toggle microphone
{XF86AudioMicMute,alt + {m,button9}}
	pamixer --default-source -t && \
        [ "$(pamixer --default-source --get-mute)" = false ] && \
     	notify-send "Microphone unmuted" || \
        notify-send "Microphone muted"

# toggle webcam
alt + {w,button8}
	webcam toggle && \
	[ "$(webcam get-status)" = enabled ] && \
	notify-send "Webcam enabled" || \
	notify-send "Webcam disabled"

# manage player
XF86Audio{Stop,Prev,Next,Play}
	playerctl -p "$PLAYER,%any" {pause,previous,next,play}

# lower/raise audio volume
XF86Audio{Lower,Raise}Volume
	pamixer {-d,-i} 1

# mute audio
XF86AudioMute
	pamixer -t

# decrease/increae brightness
XF86MonBrightness{Down,Up}
	light -{U,A} 5

# take screenshot
Print + {_,shift}
	screenshot screenshot-{fullscreen,selection}
